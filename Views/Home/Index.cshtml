@inject Karakatsiya.Localizations.SharedLocalizationService sharedLocalizer
@inject Karakatsiya.Data.ApplicationDbContext _context

@{
    var settings = _context.HomePageSettings.FirstOrDefault();
    ViewData["Title"] = sharedLocalizer.Messages["HomeTitle"];
}

<div class="container mt-4">
    <!-- Приветствие -->
    <section class="text-center mb-5">
        <h1>@sharedLocalizer.Pages["HomePage.Title"]</h1>
        <p class="lead">@sharedLocalizer.Pages["HomePage.Greetings"]</p>
    </section>

    <!-- Галерея -->
    <div class="row">
        @if (!string.IsNullOrEmpty(settings?.Image1))
        {
            <div class="col-md-4">
                <img src="@settings.Image1" class="img-fluid rounded shadow" alt="Image 1">
            </div>
        }

        @if (!string.IsNullOrEmpty(settings?.Image2))
        {
            <div class="col-md-4">
                <img src="@settings.Image2" class="img-fluid rounded shadow" alt="Image 2">
            </div>
        }

        @if (!string.IsNullOrEmpty(settings?.Image3))
        {
            <div class="col-md-4">
                <img src="@settings.Image3" class="img-fluid rounded shadow" alt="Image 3">
            </div>
        }
    </div>

    <!-- Новости -->
    <section class="mb-5">
        <h2>@sharedLocalizer.Messages["News"]</h2>
        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action">
                <h5 class="mb-1">@sharedLocalizer.Messages["NewsTitle1"]</h5>
                <p class="mb-1">@sharedLocalizer.Messages["NewsSummary1"]</p>
                <small>@sharedLocalizer.Messages["NewsDate1"]</small>
            </a>
            <a href="#" class="list-group-item list-group-item-action">
                <h5 class="mb-1">@sharedLocalizer.Messages["NewsTitle2"]</h5>
                <p class="mb-1">@sharedLocalizer.Messages["NewsSummary2"]</p>
                <small>@sharedLocalizer.Messages["NewsDate2"]</small>
            </a>
        </div>
    </section>

    <!-- Контакты -->
    <section class="mb-5">
        <h2>@sharedLocalizer.Messages["Contact"]</h2>
        <p>@sharedLocalizer.Messages["ContactText"]</p>
        <ul class="list-unstyled">
            <li><strong>@sharedLocalizer.Messages["Address"]:</strong> 1234 Street Name, City</li>
            <li><strong>@sharedLocalizer.Messages["Phone"]:</strong> +1 234 567 890</li>
            <li><strong>@sharedLocalizer.Messages["Email"]:</strong> info@example.com</li>
        </ul>
    </section>
</div>